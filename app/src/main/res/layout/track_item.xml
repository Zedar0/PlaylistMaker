<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivTrackImage"
        android:layout_width="@dimen/dimention_44dp"
        android:layout_height="@dimen/dimention_44dp"
        android:layout_gravity="start|center"
        android:layout_marginStart="@dimen/dimention_12dp"
        tools:background="@drawable/placeholder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dimention_16dp"
        android:layout_marginStart="@dimen/dimention_64dp"
        android:layout_marginEnd="@dimen/dimention_44dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTrackName"
            style="@style/ReturnTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textFontWeight="400"
            android:maxLines="1"
            android:textSize="@dimen/text_size_16"
            tools:text="Песня"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvArtistName"
                style="@style/TrackArtistAndTimeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:textSize="12sp"
                tools:text="Артист"/>

            <ImageView
                style="@style/SettingsParameterIconStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/point_icon" />

            <TextView
                android:id="@+id/tvTrackTime"
                style="@style/TrackArtistAndTimeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:textSize="12sp"
                tools:text="Время"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        style="@style/SettingsParameterIconStyle"
        android:layout_width="@dimen/dimention_24dp"
        android:layout_height="@dimen/dimention_24dp"
        android:layout_gravity="end|center"
        android:layout_marginEnd="@dimen/dimention_12dp"
        android:src="@drawable/user_guide_icon" />

</FrameLayout>