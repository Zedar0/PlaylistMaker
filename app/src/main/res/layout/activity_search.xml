<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    tools:context=".SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimention_4dp"
        android:layout_marginStart="@dimen/dimention_4dp">
        <ImageView
            style="@style/ReturnButtonStyle"
            android:id="@+id/return_button"
            android:layout_width="@dimen/dimention_48dp"
            android:layout_height="@dimen/dimention_48dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/return_icon"/>
        <TextView
            style="@style/ReturnTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimention_12dp"
            android:text="@string/search_text"
            android:textSize="@dimen/text_size_22"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/container"
        android:theme="@style/Theme.PlaylistMaker.SearchStringColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimention_16dp"
        android:layout_marginTop="@dimen/dimention_8dp"
        android:orientation="horizontal"
        tools:context=".SettingsActivity">
        <EditText
            android:id="@+id/inputEditText"
            style="@style/SearchHintStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimention_36dp"
            android:paddingStart="@dimen/dimention_12dp"
            android:maxLength="10"
            android:maxLines="1"
            android:inputType="text"
            android:hint="@string/search_text"
            android:drawableStart="@drawable/search_icon_16x16"
            android:drawablePadding="@dimen/dimention_8dp"
            android:textCursorDrawable="@drawable/cursor"
            android:cursorVisible="true"/>
        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="@dimen/dimention_12dp"
            android:src="@drawable/clear_icon"
            android:visibility="gone"
            android:foreground="?attr/selectableItemBackground"/>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTrackList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimention_16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/track_item"/>

</LinearLayout>