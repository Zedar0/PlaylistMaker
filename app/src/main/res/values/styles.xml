<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTextViewStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">@dimen/main_button_between_icon_text_size</item>
    </style>

    <style name="ReturnButtonStyle">
        <item name="android:tint">?attr/colorOnSecondary</item>
    </style>

    <style name="ReturnTextStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsParameterTextStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsParameterIconStyle">
        <item name="android:tint">@color/icon_day_mode</item>
    </style>

    <style name="SearchHintStyle">
        <item name="android:textColorHint">@color/icon_day_mode</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableTint">@color/icon_day_mode</item>
        <item name="android:background">@drawable/rounded_corner_search</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>