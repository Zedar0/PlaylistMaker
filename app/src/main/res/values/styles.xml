<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/dimention_16dp</item>
        <item name="android:paddingHorizontal">@dimen/dimention_16dp</item>
        <item name="android:paddingBottom">@dimen/dimention_28dp</item>
    </style>
    <style name="MainTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">@dimen/main_button_between_icon_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="SecondaryActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="ReturnButtonAndTextLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/dimention_4dp</item>
        <item name="android:layout_marginStart">@dimen/dimention_4dp</item>
    </style>
    <style name="ReturnButtonStyle">
        <item name="android:layout_width">@dimen/dimention_48dp</item>
        <item name="android:layout_height">@dimen/dimention_48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="android:tint">?attr/colorOnSecondary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="ReturnTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/dimention_12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SettingsParametersStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_height_size</item>

        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="SettingsParameterTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:paddingStart">@dimen/dimention_16dp</item>
    </style>
    <style name="SettingsParameterIconStyle">
        <item name="android:layout_width">@dimen/dimention_24dp</item>
        <item name="android:layout_height">@dimen/dimention_24dp</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_marginEnd">@dimen/dimention_12dp</item>
        <item name="android:tint">@color/icon_day_mode</item>
    </style>
    <style name="SwitchDayNightStyle">
        <item name="android:layout_width">@dimen/dimention_56dp</item>
        <item name="android:layout_height">@dimen/dimention_40dp</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_marginEnd">@dimen/dimention_8dp</item>
    </style>
    <style name="SearchHintStyle">
        <item name="android:textColorHint">@color/icon_day_mode</item>
        <item name="android:drawableTint">@color/icon_day_mode</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimention_36dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableStart">@drawable/search_icon_16x16</item>
        <item name="android:drawablePadding">@dimen/dimention_8dp</item>
        <item name="android:paddingStart">@dimen/dimention_12dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@drawable/rounded_corner_search</item>
        <item name="android:maxLength">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:hint">@string/search_text</item>
    </style>
    <style name="SearchLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dimention_16dp</item>
        <item name="android:layout_marginTop">@dimen/dimention_8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="SearchClearStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_marginEnd">@dimen/dimention_12dp</item>
        <item name="android:src">@drawable/clear_icon</item>
        <item name="android:visibility">gone</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>