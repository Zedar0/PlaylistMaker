<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsParameterIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="SearchHintStyle">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableStart">@drawable/search_icon_16x16</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@drawable/rounded_corner_search</item>
        <item name="android:maxLength">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:hint">@string/search_text</item>
    </style>
</resources>